<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.nitaioanmadalinassessment.ui.listfragment.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
        <argument android:name="categoryFilter"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <action
            android:id="@+id/action_listFragment_to_unrdItemsFragment"
            app:destination="@id/unrdItemsFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.nitaioanmadalinassessment.ui.articlefragment.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article">
        <argument
            android:name="currentArticle"
            app:argType="com.example.nitaioanmadalinassessment.data.models.articles.Article" />
    </fragment>
    <fragment
        android:id="@+id/unrdItemsFragment"
        android:name="com.example.nitaioanmadalinassessment.ui.unrditemsfragment.UnrdItemsFragment"
        android:label="fragment_unrd_items"
        tools:layout="@layout/fragment_unrd_items" />
</navigation>